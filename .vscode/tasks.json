{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Debug (Windows)",
      "type": "shell",
      "group": "build",
      "command": ".\\build.bat",
      "args": [ "debug"],
      "problemMatcher": []
    },

    {
      "label": "Build Release (Windows)",
      "type": "shell",
      "group": "build",
      "command": ".\\build.bat",
      "args": [ "release"],
      "problemMatcher": []
    },

    {
      "label": "Build Test (Windows)",
      "type": "shell",
      "group": "build",
      "command": "clang-cl",
      "args": [
        "-Z7",
        "-std:c++17",

        ".\\test.cc",
        "build/utf8_debug.lib",

        "-obuild/utf8_test",
      ],
      "problemMatcher": []
    },

    {
      "label": "Run Test (Windows)",
      "type": "shell",
      "group": "build",
      "command": ".\\build\\utf8_test",
      "problemMatcher": []
    }
  ]
}