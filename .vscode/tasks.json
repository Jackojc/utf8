{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build utf8proc (Windows)",
      "type": "shell",
      "group": "build",
      "command": "clang-cl",
      "args": [
        "-Z7",
        "-c",
        
        "extern/utf8proc/utf8proc.c",

        "-Fobuild/utf8proc_debug",

        "-DUTF8PROC_STATIC",
      ],
      "problemMatcher": []
    },

    {
      "label": "Build Test (Windows)",
      "type": "shell",
      "group": "build",
      "command": "clang-cl",
      "args": [
        "-Z7",
        "-std:c++17",

        ".\\test.cc",
        "build/utf8proc_debug.obj",

        "-obuild/utf8_test",
      ],
      "problemMatcher": []
    },

    {
      "label": "Run Test (Windows)",
      "type": "shell",
      "group": "build",
      "command": ".\\build\\utf8_test",
      "problemMatcher": []
    }
  ]
}